  [color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan


  [color]
    ui = true
  [color "diff"]
    whitespace = red reverse 
  [core]
    whitespace=fix,-indent-with-non-tab,trailing-space

  [apply]
    whitespace = nowarn


  [alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff -b -w
    lg = log -p


